{
  "compilerOptions": {
    "target": "es2016",                               
    "experimentalDecorators": true,                  
    "module": "commonjs",                     
    "typeRoots": ["./node_modules/@types", "./src/types"],                                                   
    "outDir": "./dist",                                   
    "esModuleInterop": true,                                             
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                      
    "skipLibCheck": true                                 
  },
    "include": ["src/**/*.ts"]
}
